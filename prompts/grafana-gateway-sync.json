{
  "image_type": "software_screenshot",
  "title": "Grafana Gateway Synchronization Dashboard",
  "style": {
    "theme": "grafana_dark",
    "color_palette": ["#111217", "#181b1f", "#22252a", "#73bf69", "#5794f2", "#fade2a", "#ff9830", "#f2495c", "#b877d9"],
    "aesthetic": "production Grafana dashboard, frequency synchronization monitoring, grid interconnection, real-time waveform analysis",
    "mood": "precise, technical, real-time monitoring, power systems engineering"
  },
  "layout": {
    "type": "grafana_grid",
    "rows": 4,
    "columns": 6
  },
  "content": {
    "grafana_chrome": {
      "top_bar": {
        "left": ["Grafana logo", "breadcrumb: 'Dashboards / Microgrid / Gateway Sync'"],
        "center": ["'Gateway Synchronization Monitor - Live'"],
        "right": ["time range: 'Last 5 minutes'", "refresh: '1s' (real-time)", "live indicator: green dot"]
      },
      "left_sidebar": {"state": "collapsed"}
    },
    "row_1": {
      "title": "Swarm Bus Reference",
      "panels": [
        {
          "position": "span 2",
          "type": "stat",
          "title": "Swarm Bus Frequency",
          "visual": {"value": "50.00 Hz", "color": "#5794f2", "sparkline": "very stable line", "subtitle": "Reference"}
        },
        {
          "position": "span 2",
          "type": "stat",
          "title": "Swarm Bus Voltage",
          "visual": {"value": "230.0 V", "color": "#73bf69"}
        },
        {
          "position": "span 2",
          "type": "stat",
          "title": "Connected Gateways",
          "visual": {"value": "2 / 3", "color": "#fade2a", "subtitle": "Gateway C waiting"}
        }
      ]
    },
    "row_2": {
      "title": "Gateway Status",
      "panels": [
        {
          "position": "span 2",
          "type": "time_series",
          "title": "Gateway A - Frequency Delta",
          "visual": {
            "series": [{"name": "Δf", "color": "#73bf69", "data": "hovering around -0.03 Hz, very stable"}],
            "y_axis": {"range": "-0.5 to +0.5 Hz", "zero_line": "emphasized"},
            "thresholds": [
              {"value": -0.5, "color": "#f2495c", "style": "dashed line"},
              {"value": -0.1, "color": "#fade2a", "style": "dashed line"},
              {"value": 0.1, "color": "#fade2a", "style": "dashed line"},
              {"value": 0.5, "color": "#f2495c", "style": "dashed line"}
            ],
            "current_value_annotation": "-0.03 Hz"
          },
          "footer_stats": {"sync_quality": "99.4%", "contactor": "CLOSED"}
        },
        {
          "position": "span 2",
          "type": "time_series",
          "title": "Gateway B - Frequency Delta",
          "visual": {
            "series": [{"name": "Δf", "color": "#73bf69", "data": "nearly flat at +0.01 Hz, perfect sync"}],
            "y_axis": {"range": "-0.5 to +0.5 Hz"},
            "thresholds": "same as Gateway A",
            "current_value_annotation": "+0.01 Hz"
          },
          "footer_stats": {"sync_quality": "99.9%", "contactor": "CLOSED"}
        },
        {
          "position": "span 2",
          "type": "time_series",
          "title": "Gateway C - Frequency Delta",
          "visual": {
            "series": [{"name": "Δf", "color": "#ff9830", "data": "fluctuating between -0.3 and -0.4 Hz, approaching threshold"}],
            "y_axis": {"range": "-0.5 to +0.5 Hz"},
            "thresholds": "same thresholds, line approaching yellow zone",
            "current_value_annotation": "-0.38 Hz",
            "fill": "gradient orange below line"
          },
          "footer_stats": {"sync_quality": "76.2%", "contactor": "OPEN"}
        }
      ]
    },
    "row_3": {
      "title": "Contactor State Timeline",
      "panels": [
        {
          "position": "span 6 (full width)",
          "type": "state_timeline",
          "title": "Gateway Contactor States - Last 10 Minutes",
          "visual": {
            "description": "Grafana state-timeline panel showing contactor states over time",
            "rows": [
              {
                "label": "Gateway A",
                "states": [{"state": "CLOSED", "color": "#73bf69", "duration": "full 10 minutes"}]
              },
              {
                "label": "Gateway B",
                "states": [{"state": "CLOSED", "color": "#73bf69", "duration": "full 10 minutes"}]
              },
              {
                "label": "Gateway C",
                "states": [
                  {"state": "CLOSED", "color": "#73bf69", "start": "-10:00", "end": "-8:00"},
                  {"state": "OPEN", "color": "#ff9830", "start": "-8:00", "end": "now", "annotation": "Opened - freq delta exceeded"}
                ]
              }
            ],
            "annotations": [
              {"time": "-8:00", "label": "GW-C opened: Δf > 0.5Hz", "color": "#f2495c"}
            ]
          },
          "style": "Grafana state-timeline with colored bars for each state"
        }
      ]
    },
    "row_4": {
      "title": "Sync Quality & Rules",
      "panels": [
        {
          "position": "span 1",
          "type": "gauge",
          "title": "GW-A Sync",
          "visual": {"value": 99.4, "color": "#73bf69", "thresholds": [{"value": 0, "color": "#f2495c"}, {"value": 50, "color": "#fade2a"}, {"value": 90, "color": "#73bf69"}]}
        },
        {
          "position": "span 1",
          "type": "gauge",
          "title": "GW-B Sync",
          "visual": {"value": 99.9, "color": "#73bf69"}
        },
        {
          "position": "span 1",
          "type": "gauge",
          "title": "GW-C Sync",
          "visual": {"value": 76.2, "color": "#fade2a"}
        },
        {
          "position": "span 3",
          "type": "table",
          "title": "Synchronization Rules",
          "visual": {
            "columns": ["Condition", "Action", "Status"],
            "rows": [
              {"condition": "|Δf| < 0.1 Hz", "action": "CLOSE immediately", "status": "GW-A, GW-B", "color": "#73bf69"},
              {"condition": "|Δf| < 0.5 Hz", "action": "CLOSE when phase aligns", "status": "-", "color": "#fade2a"},
              {"condition": "|Δf| > 0.5 Hz", "action": "WAIT - do not close", "status": "GW-C", "color": "#ff9830"},
              {"condition": "f < 47.5 Hz", "action": "EMERGENCY CLOSE", "status": "-", "color": "#f2495c"}
            ]
          }
        }
      ]
    }
  },
  "technical_details": {
    "resolution": "1920x1080",
    "aspect_ratio": "16:9",
    "render_style": "photorealistic Grafana screenshot",
    "lighting": "flat LCD, no reflections",
    "context": "Grafana 10.x with state-timeline panel, real-time dashboard",
    "accuracy": "exact Grafana panels, state-timeline visualization, threshold lines"
  },
  "negative_prompts": [
    "curved monitor", "oscilloscope", "control room", "reflections", "cinematic", "neon glow", "waveform overlay", "monitor bezel", "room background"
  ]
}
